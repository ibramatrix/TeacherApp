<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/parentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etTestsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Test Name"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etTotalsMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Marks"
            android:padding="12dp"
            android:inputType="number"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCreateTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Test"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/studentListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <Button
            android:id="@+id/saveMarksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Marks"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
